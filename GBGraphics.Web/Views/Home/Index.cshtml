@{
    Layout = "_Layout";
    ViewData["Title"] = "Index";
}

<div class="box">
    <p>Choose an image from your computer and it will be processed and displayed below, side-by-side with the original.</p>
    <p><input type="file" accept=".png,.jpg,.jpeg,.gif"></p>
    <div>
        <ul id="file-stats">
            <li>Name: <code id="file-name"></code></li>
            <li>Size: <code id="file-size"></code></li>
            <li>Type: <code id="file-type"></code></li>
            <li><img id="before"><img id="after"></li>
        </ul>
    </div>
</div>

@section Scripts {
    <script src="~/js/site.js"></script>
}